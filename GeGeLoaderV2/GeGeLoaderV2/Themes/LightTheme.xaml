<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="AppBackgroundColor">#E0E0E0</Color>
    <Color x:Key="TitleBarBackgroundColor">#CCCCCC</Color>
    <Color x:Key="TextColor">#202020</Color>
    <Color x:Key="GlassBackgroundColor">#333333</Color>
    <Color x:Key="GlassBorderColor">#666666</Color>

    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}" Opacity="0.66"/>
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="{StaticResource TitleBarBackgroundColor}" Opacity="0.53"/>
    <SolidColorBrush x:Key="TextColorBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="GlassBackgroundBrush" Color="{StaticResource GlassBackgroundColor}" Opacity="0.125"/>
    <SolidColorBrush x:Key="GlassBorderBrush" Color="{StaticResource GlassBorderColor}" Opacity="0.3125"/>
</ResourceDictionary>
